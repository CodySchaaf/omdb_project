%header.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
	.container-fluid
		.navbar-header
			%button.navbar-togle{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#bs-example-navbar-collapse-1'}
				%span.sr-only 'Toggle navigation'
				= for i in 1..3 
					%span.icon-bar 
			= link_to 'Brand', '#', class: 'navbar-brand'

		.collapse.navbar-collapse#bs-example-navbar-collapse-1
			%ul.nav.navbar-nav 
				%li.active 
					= link_to 'Link', '#'
				%li.dropdown 
					= link_to "#",{ class: 'dropdown-toggle', 'data-toggle' => 'dropdown'} do
						%b.caret 'Dropdown'
					%ul.dropdown-menu 
						%li = link_to 'Action', '#'
						%li = link_to 'Another Action', '#'
						%li = link_to 'Something else here', '#'
						%li.divider
						%li = link_to 'Seperate Link', '#'
						%li.divider
						%li = link_to 'One more separated link', '#'
			= render 'layouts/form'
			%ul.nav.navbar-nav.navbar-right 
				%li = link_to 'Link', '#'
				%li.dropdown 
					= link_to '#',{ class: 'dropdown-toggle', 'data-toggle' => 'dropdown'} do
						%b.caret 'Dropdown'
					%ul.dropdown-menu 
						%li = link_to 'Action', '#'
						%li = link_to 'Another action', '#'
						%li = link_to 'Something else here', '#'
						%li.divider 
						%li = link_to 'Separated link', '#'
