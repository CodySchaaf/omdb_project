%nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
  .container#nav-bar-container
    .navbar-header
      %button.navbar-toggle{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse'}
        %span.sr-only 'Toggle navigation'
        - for i in 1..3 
          %span.icon-bar 
      = link_to 'Home', root_path, class: 'navbar-brand'
      .col-xs-offset-5
        - if signed_in?
          %a{href: "#", class: 'visible-xs navbar-brand'} 
            = "Welcome #{@current_user.user_name}"

    .collapse.navbar-collapse.navbar-collapse
      %ul.nav.navbar-nav 
        %li 
          = link_to 'User Page', '#'
        %li.dropdown 
          = link_to "#",{ class: 'dropdown-toggle', 'data-toggle' => 'dropdown'} do
            User
            %b.caret 
          %ul.dropdown-menu 
            %li 
              = link_to 'Sign Up', signup_path
            %li 
              = link_to 'Sign In', signin_path
            %li 
              = link_to 'Something else here', '#'
            %li.divider
            %li 
              = link_to 'Seperate Link', '#'
            %li.divider
            %li 
              = render 'sessions/signin_form'
        %li.hidden-xs.col-xs-push-2.col-md-push-6.col-lg-push-9.navbar-brand#welcome-message
          - if signed_in?
            %a{href: "#"} 
              = "Welcome #{@current_user.user_name}"

      .nav.navbar-nav.navbar-right#search-form.col-sm-push-6
        = render 'layouts/form'
