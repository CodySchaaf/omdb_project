= form_tag sessions_path, id: 'sign-in', class: 'input-group input-group-xs col-xs-10 col-xs-offset-1' do 
		.form-group 
		= text_field_tag :email, nil, class: 'email form-control', type: 'email', placeholder: 'Email' 
		= text_field_tag :password, nil, class:  'password form-control ', type: 'password', placeholder: 'Password' 

		= submit_tag 'Sign In', class: "btn btn-default btn-xs col-xs-10 col-xs-offset-1"