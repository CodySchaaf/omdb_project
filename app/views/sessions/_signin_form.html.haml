= form_tag sessions_path, id: 'sign-in', class: 'input-group input-group-xs col-xs-10 col-xs-offset-1' do
		.form-group
		- popover ||= false
		= text_field_tag :email, nil, class: 'email form-control rounded', type: 'email', placeholder: 'Email'
		= text_field_tag :password, nil, class:  'password form-control rounded', type: 'password', placeholder: 'Password'

		= submit_tag 'Sign In', class: 'btn btn-default btn-xs col-xs-10 col-xs-offset-1', style: 'margin-bottom: -1px;'
		-#- if popover
		%div.separating-or-div
				%span.separating-line-span
				%span.separating-or-span
						or
				%span.separating-line-span
		= link_to 'Sign Up', signup_path, method: :get, class: 'btn btn-default btn-xs col-xs-10 col-xs-offset-1', type: 'button' #, style: 'margin-top: -5px;'